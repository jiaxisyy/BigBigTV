<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/topbar"
        layout="@layout/widget_topbar" />

    <LinearLayout
        android:id="@+id/ll_charge_stake_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar"
        android:layout_marginLeft="126px"
        android:layout_marginRight="126px"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            android:text="请选择插座充电"
            android:textColor="#333333"
            android:textSize="42px" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_charge_stake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text="@string/text_charge_stake_info"
            android:textColor="#333333"
            android:textSize="36px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_home_charge_stake_info"
        android:layout_width="860px"
        android:layout_height="450px"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_bg_rect_card"
        android:orientation="vertical">

        <TextView
            style="@style/style_text_charge"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33px"
            android:text="充电状态" />

        <TextView
            android:id="@+id/tv_home_charge_stake_start_time"
            style="@style/style_text_charge"
            android:text="开始时间:" />

        <TextView
            android:id="@+id/tv_home_charge_stake_duration_time"
            style="@style/style_text_charge"
            android:text="充电时长:" />


        <TextView
            android:id="@+id/tv_home_charge_stake_energy"
            style="@style/style_text_charge"
            android:text="已充能量点:" />


        <TextView
            android:id="@+id/tv_home_charge_stake_address"
            style="@style/style_text_charge"
            android:text="充电座位置:" />

        <TextView
            android:id="@+id/tv_home_charge_stake_door"
            style="@style/style_text_charge"
            android:text="插座:" />

        <TextView
            android:id="@+id/tv_home_charge_stake_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33px"
            android:layout_marginTop="30px"
            android:text="充电费用:"
            android:textColor="@color/text_color"
            android:textSize="36px" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_home_charge_stake_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="347px"
        android:background="@drawable/shape_bg_scan"
        android:gravity="center"
        android:text="结束充电"
        android:textColor="#FFFFFF"
        android:textSize="40px" />


</RelativeLayout>