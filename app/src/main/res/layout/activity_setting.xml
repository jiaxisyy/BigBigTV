<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/widget_topbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/text_color_line" />

    <TextView
        android:id="@+id/tv_setting_autonym"
        style="@style/setting_row_style"
        android:text="实名认证" />


    <TextView
        android:id="@+id/tv_setting_changePwd"
        style="@style/setting_row_style"
        android:text="修改登录密码" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/text_color_line" />

    <RelativeLayout
        android:id="@+id/rl_setting_update"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:paddingLeft="45px"
        android:paddingRight="45px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检查更新"
            android:textColor="#333333"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_setting_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/btn_arrow_right_gray"
            android:drawablePadding="50px"
            android:text="V1.0.0" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_setting_clear"
        style="@style/setting_row_style"
        android:text="清除缓存" />


    <TextView
        android:id="@+id/tv_setting_about"
        style="@style/setting_row_style"
        android:text="关于我们" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/text_color_line" />

    <TextView
        android:id="@+id/tv_setting_protocol"
        style="@style/setting_row_style"
        android:text="用户协议" />


    <TextView
        android:id="@+id/tv_setting_logout"
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginTop="90px"
        android:layout_marginRight="30px"
        android:background="@drawable/shape_bg_login"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#FFFFFF"
        android:textSize="40px" />


</LinearLayout>