<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/widget_topbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/text_color_line" />

    <TextView
        style="@style/setting_row_style"
        android:text="实名认证" />


    <TextView
        android:id="@+id/tv_setting_changePwd"
        style="@style/setting_row_style"
        android:text="修改登录密码" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/text_color_line" />

    <TextView
        android:id="@+id/tv_setting_update"
        style="@style/setting_row_style"
        android:text="检查更新" />


    <TextView

        style="@style/setting_row_style"
        android:text="清除缓存" />


    <TextView
        android:id="@+id/tv_setting_about"
        style="@style/setting_row_style"
        android:text="关于我们" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/text_color_line" />

    <TextView
        android:id="@+id/tv_setting_protocol"
        style="@style/setting_row_style"
        android:text="用户协议" />


    <TextView
        android:id="@+id/tv_setting_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginTop="90px"
        android:layout_marginRight="30px"
        android:background="@drawable/shape_bg_login"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#FFFFFF" />


</LinearLayout>