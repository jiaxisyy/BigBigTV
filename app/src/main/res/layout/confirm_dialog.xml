<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription,TextFields" >

    <TextView
        android:id="@+id/dialog_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:text="@string/dialog_title_hint"
        android:gravity="center"
        android:textColor="@color/common_text_2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_msg"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textColor="@color/common_text_1"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="8dp"
            android:text="@android:string/cancel"
            android:textColor="@color/common_gray_font"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/config_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/common_line_color" />

        <Button
            android:id="@+id/dialog_sumbit_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="8dp"
            android:text="@android:string/ok"
            android:textColor="@color/common_green"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>