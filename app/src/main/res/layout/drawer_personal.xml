<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="454px"
        android:background="#F5F5F5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="45px"
            android:src="@drawable/icon_head_ct" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_account"
                style="@style/style_text_personal"
                android:gravity="center_vertical"
                android:text="账号：" />

            <TextView
                android:id="@+id/text_yue"
                style="@style/style_text_personal"
                android:gravity="center_vertical"
                android:text="账户余额：0元" />

            <TextView
                android:id="@+id/tv_deposit"
                style="@style/style_text_personal"
                android:gravity="center_vertical"
                android:text="押金：未缴" />

            <TextView
                android:id="@+id/tv_package"
                style="@style/style_text_personal"
                android:gravity="center_vertical"
                android:text="套餐：-" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/battery_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用能量："
                    android:textColor="#333333"
                    android:textSize="40px" />

                <ImageView
                    android:id="@+id/battery_sop"
                    android:layout_width="92px"
                    android:layout_height="50px"
                    android:layout_marginLeft="9px"
                    android:scaleType="fitXY"
                    tools:src="@drawable/battery_1" />

                <TextView
                    android:id="@+id/battery_numPP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:textColor="#333333"
                    android:textSize="40px" />
            </LinearLayout>

            <TextView
                android:id="@+id/battery_use"

                style="@style/style_text_personal"
                android:layout_marginTop="15px"
                android:text="已使用能量点：" />

            <TextView
                android:id="@+id/battery_sn"
                style="@style/style_text_personal"
                android:maxLines="3"
                android:text="电池SN码：" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>