<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99000000"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cabinet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            tools:text="标题" />

        <TextView
            android:id="@+id/cabinet_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            tools:text="SN码" />

        <TextView
            android:id="@+id/full_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:text="可换电池数量:加载中..." />

        <TextView
            android:id="@+id/cabinet_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            tools:text="地址" />
    </LinearLayout>

    <Button android:id="@+id/btn_navi"
        android:layout_width="160px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:padding="0dp"
        android:includeFontPadding="false"
        android:onClick="onClick"
        android:textSize="50px"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/btn_bg"
        android:text="导航"/>
    <Button android:id="@+id/btn_bespeak"
        android:layout_width="160px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_navi"
        android:layout_marginTop="15px"
        android:padding="0dp"
        android:includeFontPadding="false"
        android:onClick="onClick"
        android:textSize="50px"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/btn_bg"
        android:text="预约"/>
</RelativeLayout>