<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99000000"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cabinet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            tools:text="名称" />

        <TextView
            android:id="@+id/cabinet_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            tools:text="SN码" />

        <TextView
            android:id="@+id/full_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可换电池数量:加载中..."
            android:textColor="#FFFFFFFF" />

        <TextView
            android:id="@+id/cabinet_empty_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            tools:text="空仓数量" />

        <!--<TextView-->
            <!--android:id="@+id/cabinet_address"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="#FFFFFFFF"-->
            <!--tools:text="地址" />-->
    </LinearLayout>

    <Button
        android:id="@+id/btn_navi"
        android:layout_width="160px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_bg"
        android:includeFontPadding="false"
        android:padding="0dp"
        android:text="导航"
        android:textColor="#FFFFFFFF"
        android:textSize="50px"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_bespeak"
        android:layout_width="160px"
        android:layout_height="80px"
        android:layout_below="@id/btn_navi"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15px"
        android:background="@drawable/btn_bg"
        android:includeFontPadding="false"
        android:padding="0dp"
        android:text="预约"
        android:textColor="#FFFFFFFF"
        android:textSize="50px"
        android:visibility="invisible" />
</RelativeLayout>