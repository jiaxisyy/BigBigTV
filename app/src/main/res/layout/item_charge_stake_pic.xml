<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_choose_stake_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75px"
        android:src="@drawable/icon_socket_no_normal" />

    <ImageView
        android:id="@+id/iv_item_charge_stake_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_item_choose_stake_pic"
        android:layout_alignBottom="@+id/iv_item_choose_stake_pic"
        android:src="@drawable/icon_item_choose_stake_selected"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_item_charge_stake_num"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_below="@+id/iv_item_choose_stake_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:background="@drawable/shape_bg_circle_red"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="50px" />

</RelativeLayout>