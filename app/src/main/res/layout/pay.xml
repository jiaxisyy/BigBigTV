<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/widget_topbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="94px"
        android:text="钱包余额" />

    <TextView android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72px"
        android:text="¥0.00"
        android:textColor="#333333"
        android:textSize="70px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_marginTop="45px"
        android:background="@color/text_color_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="57px"
        android:text="充值金额" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56px"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_my_money1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_money_100"
                    style="@style/style_bg_pay_money"
                    android:onClick="onClick"
                    android:text="¥100" />

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

                <RadioButton
                    android:id="@+id/rb_money_200"
                    style="@style/style_bg_pay_money"
                    android:onClick="onClick"
                    android:text="¥200" />

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

                <RadioButton
                    android:id="@+id/rb_money_300"
                    style="@style/style_bg_pay_money"
                    android:onClick="onClick"
                    android:text="¥300" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px">
            <RadioButton
                android:id="@+id/rb_money_500"
                style="@style/style_bg_pay_money"
                android:onClick="onClick"
                android:text="¥500" />

            <TextView
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <RadioButton
                android:id="@+id/rb_money_1000"
                style="@style/style_bg_pay_money"
                android:onClick="onClick"
                android:text="¥1000" />

            <TextView
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/edit_payNum"
                style="@style/style_bg_pay_money"
                android:hint="自定义金额"
                android:layout_height="147px"
                android:inputType="numberDecimal"
                android:onClick="onClick"
                android:textSize="42px" />

            </LinearLayout>
        </RadioGroup>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="94px"
        android:text="支付方式" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:orientation="vertical"
        android:paddingLeft="45px"
        android:paddingRight="45px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200px">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_form_zhifubao"
                android:drawablePadding="45px"
                android:text="支付宝" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_form_weixin"
                android:drawablePadding="45px"
                android:text="微信" />

            <RadioGroup
                android:id="@+id/rg_my_money_pay_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_zfb"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableRight="@drawable/choice_selector" />

                <RadioButton
                    android:id="@+id/rb_wx"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableRight="@drawable/choice_selector"/>

            </RadioGroup>


        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/btn_paysure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginTop="90px"
        android:layout_marginRight="30px"
        android:background="@drawable/shape_bg_login"
        android:gravity="center"
        android:text="立即充值"
        android:textColor="#FFFFFF" />

</LinearLayout>