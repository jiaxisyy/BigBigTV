<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="261px"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pop_map_marker_address"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_map_pop_location"
            android:drawablePadding="36px"
            android:text="地址:"
            android:textColor="#333333"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_pop_map_marker_gps"
            android:layout_width="270px"
            android:layout_height="102px"
            android:layout_marginRight="45px"
            android:background="@drawable/shape_bg_scan"
            android:gravity="center"
            android:text="开始导航"
            android:textColor="#FFFFFF"
            android:textSize="40px" />
    </LinearLayout>


</LinearLayout>