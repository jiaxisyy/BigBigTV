<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!-- 标题栏 -->
    <include
        android:id="@+id/topbar"
        layout="@layout/widget_topbar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="189px"
        android:src="@drawable/icon_launcher" />

    <include layout="@layout/include_user_phone" />

    <include layout="@layout/include_user_password" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30px"
        android:layout_marginTop="120px"
        android:layout_marginRight="30px"
        android:background="@drawable/shape_bg_login"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="54px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:layout_marginTop="40px"
        android:layout_marginRight="80px"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_goResign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableRight="@drawable/btn_arrow_right"
            android:text="快速注册"
            android:textColor="@color/text_color"
            android:textSize="36px" />
        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="right"-->
        <!--android:gravity="right"-->
        <!--android:text="忘记密码"-->
        <!--android:clickable="true"-->
        <!--android:textColor="@color/text_color"-->
        <!--android:onClick="forgetPassword"-->
        <!--android:textSize="42px"/>-->

    </LinearLayout>

</LinearLayout>
