<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_rect"
    android:orientation="vertical"
    android:paddingLeft="45px"
    android:paddingRight="45px">

    <TextView
        android:id="@+id/tv_window_map_alarm_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="标题"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_window_map_alarm_detail_address"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="地址"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_window_map_alarm_detail_message"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="备注"
        android:textColor="#FFFFFF" />


</LinearLayout>