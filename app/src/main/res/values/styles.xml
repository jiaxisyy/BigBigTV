<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Navigation Header -->

    <!-- Android Style -->

    <!-- Font Styles -->

    <!-- Application Style -->

    <style name="Style_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialogActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="DialogBaseTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--提示信息、加载框等-->
    <style name="TipDialogTheme" parent="DialogBaseTheme">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="user_center_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFFFF</item>
        <item name="android:textSize">48px</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!--设置界面文字行格式-->
    <style name="setting_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150px</item>
        <item name="android:drawableRight">@drawable/btn_arrow_right_gray</item>
        <item name="android:textSize">40px</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingLeft">45px</item>
        <item name="android:paddingRight">45px</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ActivityTransparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <!--预约界面文字格式-->
    <style name="style_text_bespeak">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--个人中心界面文字格式-->
    <style name="style_text_personal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">40px</item>
    </style>
    <!--首页界面文字格式上-->
    <style name="style_text_home_top">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">35px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">36px</item>
    </style>
    <!--个人中心界面文字格式上-->
    <style name="style_text_my_top">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>
    <!--服务界面圆圈文字格式-->
    <style name="style_text_service_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">36px</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/selector_service_circle</item>
    </style>
    <!--服务界面圆圈格式-->
    <style name="style_bg_service_top">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--支付界面金额格式-->
    <style name="style_bg_pay_money">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">150px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_pay_money</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>

    </style>


</resources>
